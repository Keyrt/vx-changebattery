/* pages/order/renewList.wxss */

.container {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 10rpx 0;
  background-color: #FBFBFB;
  color: #333;
}

.box {
  margin: 20rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 6rpx #e3e3e3;
  line-height: 48rpx;
  font-size: 28rpx;
  position: relative;
}

.item .info {
  font-size: 28rpx;
  line-height: 56rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.item .info .lable {
  float: left;
  margin-left: 10rpx;
  width: 180rpx;
  text-align: right;
}

.item {
  margin: 20rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx 62rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 6rpx #e3e3e3;
  line-height: 48rpx;
  font-size: 28rpx;
  position: relative;
}



.order-stuats {
  position: absolute;
  right: 20rpx;
  top: 26rpx;
  padding: 0 20rpx;
  border-radius: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid rgb(255, 223, 7);
  background-color: rgb(255, 223, 7, 0.6);
}

.order-stuats.red {
  border: 1rpx solid red;
  color: #fff;
  background-color: rgb(255, 0, 0, 0.6);
}

.order-stuats.grey {
  border: 1rpx solid grey;
  color: #fff;
  background-color: rgb(128, 128, 128, 0.6);
}

.order-count {
  position: absolute;
  bottom: 12rpx;
  right: 20rpx;
}

.empty {
  width: 100%;
  height: 100%;
}

.empty-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
}

.empty-container .text {
  text-align: center;
  margin: 30rpx 0;
}

.empty-container .text.blue {
  color: blue;
}
/* pages/order/orderDetil.wxss */
.container {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 10rpx 0;
  background-color: #FBFBFB;
  color: #333;
}

.box {
  margin: 20rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 6rpx #e3e3e3;
  line-height: 48rpx;
  font-size: 28rpx;
  position: relative;
}

.box .title {
  font-size: 32rpx;
  line-height: 80rpx;
  position: relative;
}

.box .title image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.box.renew .title image {
  width: 46rpx;
  height: 46rpx;
}

.box .title h3 {
  margin-left: 20rpx;
}

.box.renew .title h3 {
  margin-left: 14rpx;
}

.box .title .stuats {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  border-radius: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid rgb(255, 223, 7);
  background-color: rgb(255, 223, 7, 0.6);
}

.box .title .stuats.red {
  border: 1rpx solid red;
  color: #fff;
  background-color: rgb(255, 0, 0, 0.6);
}

.box .title .stuats.grey {
  border: 1rpx solid grey;
  color: #fff;
  background-color: rgb(128, 128, 128, 0.6);
}

.box .title .icon-arrow {
  position: absolute;
  right: 0rpx;
}

.box .info {
  font-size: 28rpx;
  line-height: 56rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.box .info .lable {
  float: left;
  margin-left: 10rpx;
  width: 200rpx;
  text-align: right;
}

.order-stuats {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  padding: 0 20rpx;
  border-radius: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid rgb(255, 223, 7);
  background-color: rgb(255, 223, 7, 0.6);
}

.order-stuats.red {
  border: 1rpx solid red;
  color: #fff;
  background-color: rgb(255, 0, 0, 0.6);
}

.order-stuats.grey {
  border: 1rpx solid grey;
  color: #fff;
  background-color: rgb(128, 128, 128, 0.6);
}

.order-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.box .item {
  position: relative;
  padding: 20rpx 0rpx 60rpx;
  border-bottom: 1rpx solid #e3e3e3;
}

.box .item:last-child {
  border-bottom: none;
}

.empty {
  width: 100%;
  height: 100%;
}

.empty-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
}

.empty-container .text {
  text-align: center;
  margin: 30rpx 0;
}

.empty-container .text.blue {
  color: blue;
}
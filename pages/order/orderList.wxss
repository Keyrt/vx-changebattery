.empty {
  width: 100%;
  height: 100%;
}

.empty-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
}

.empty-container .text {
  text-align: center;
  margin: 30rpx 0;
}

.empty-container .text.blue {
  color: blue;
}
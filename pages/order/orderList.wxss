/* pages/order/orderList.wxss */
.container {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 10rpx 0;
  background-color: #FBFBFB;
  color: #333;
}

.orderList {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.orderItem {
  margin: 30rpx 0;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  padding-bottom: 20rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 6rpx #e3e3e3;
  line-height: 48rpx;
  font-size: 28rpx;
  position: relative;
}

.order-li.title {
  font-size: 28rpx;
  line-height: 60rpx;
}

.order-li .lable {
  float: left;
  margin-left: 10rpx;
  width: 150rpx;
  text-align: right;
}

.order-li .info.red {
  color: red;
}

.order-li .info.grey {
  color: grey;
}

.order-stuats {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  padding: 0 20rpx;
  border-radius: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid rgb(255, 223, 7);
  background-color: rgb(255, 223, 7, 0.6);
}

.order-stuats.red {
  border: 1rpx solid red;
  color: #fff;
  background-color: rgb(255, 0, 0, 0.6);
}

.order-stuats.grey {
  border: 1rpx solid grey;
  color: #fff;
  background-color: rgb(128, 128, 128, 0.6);
}

.order-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
}

